
<section class="py-3 py-md-5">
    <div class="container">
        <div class="card mx-auto col-12 col-md-5 border-0">
            <div class="card-body p-md-5">
                <h2 class="text-center mb-4">Update Celebrity</h2>
                <form action="/celebrities/create" method="post">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Full name" value="{{celeb.name}}">
                        <label for="name">Full name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="occupation" name="occupation" placeholder="Occupation" value="{{celeb.occupation}}">
                        <label for="occupation">Occupation</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="occupation" name="catchPhrase" placeholder="Catch phrase" value="{{celeb.catchPhrase}}">
                        <label for="occupation">Catch phrase</label>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary flex-fill mb-3 w-100">Update</button>
                        <a href="/celebrities/{{celeb._id}}/edit" class="btn btn-light w-100">Clear</a>
                    </div>
                    
                </form>
            </div>
        </div>
        
    </div>
</section>